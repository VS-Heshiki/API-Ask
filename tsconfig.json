{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "baseUrl": "src",
        "moduleResolution": "node",
        "paths": {
            "@/tests/*": [
                "../tests/*"
            ],
            "@/*": [
                "*"
            ]
        },
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "vitest/globals"
        ]
    }
}
